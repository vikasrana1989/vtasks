<div class="col-sm-6">
    <h3>Edit Task</h3>
    <form>
        <div class="input-group form-group">
            <span class="input-group-addon">Title</span>
            {{input type="text" class="form-control" value=model.title describedby="basic-addon1"}}
        </div>
        <div class="input-group form-group">
            <span class="input-group-addon">Date</span>
            {{input type="datetime" class="form-control" value=model.date }}
        </div>
        <div class="input-group form-group">
            <span class="input-group-addon">Description</span>
            {{textarea class="form-control" value=model.desc}}
        </div>
      <button {{action 'editTask' model.id}}  class="btn btn-success">Save</button>
      <button {{action 'cancelTask' model.id}}  class="btn btn-danger">Cancel</button>
    </form>
</div>